@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<h2>Session ID: @Context.Request.Cookies["ASP.NET_SessionId"].Value</h2>
<h2>Provider User Key: @(Context.User.Identity.IsAuthenticated ? Context.User.Identity.GetUserId() : "None")</h2>

<h2>Name: @Session["name"]</h2>
<h2>Age: @Session["age"]</h2>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>New Data</legend>

        <label>Name: @Html.TextBox("name", "", new { autocomplete = "off" })</label><br />
        <label>Age: @Html.TextBox("age", "", new { autocomplete = "off" })</label><br />
        <input type="submit" value="Save" />
    </fieldset>
}

@using (Html.BeginForm("abandonsession", "home"))
{
    <input type="submit" value="Abandon Session" />
}